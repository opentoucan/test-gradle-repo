{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'local>opentoucan/renovate-config',
  ],
  customManagers: [
    {
      customType: "regex",
      description: "Process annotated dependencies",
      managerFilePatterns: [
        "/(^|/|\\.)Dockerfile$/",
        "(^|.*/)build.gradle.kts$"
      ],
      matchStrings: [
        // jvmToolchain(17)
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\n.+\((?<currentValue>\\S+)\)",
        // FROM gradle:jdk17 AS build
        "datasource=(?<datasource>\\S+) depName=(?<depName>\\S+)\\n.+:([a-zA-Z]+)?(?<currentValue>\\S+)"
      ]
    }
  ],
  packageRules: [
    {
      description: ['Java Version Group'],
      groupName: 'Java Version',
      matchDepNames: ['jdk', 'openjdk'],
      group: {
        commitMessageTopic: '{{{groupName}}} group'
      },
      minimumGroupSize: 3
    },
  ],
}

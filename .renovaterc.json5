{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'local>opentoucan/renovate-config',
  ],
  customManagers: [
    {
      customType: "regex",
      description: "Update Java Version",
      fileMatch: ["(^|.*/)build.gradle.kts$"],
      matchStrings: ["jvmToolchain\\((?<currentValue>.*)\\)"],
      datasourceTemplate: "java-version",
      depNameTemplate: "gradle-toolchain",
      extractVersionTemplate: "^(?<version>\\d+)"
    },
    {
      customType: "regex",
      description: "Gradle Docker version",
      managerFilePatterns: [
        "/^Dockerfile$/",
      ],
      matchStrings: [
        "FROM (?<depName>gradle):(?<currentValue>jdk\\d+)"
      ],
      datasourceTemplate: "docker",
    }
  ],
  packageRules: [
    {
      matchPackageNames: ["gradle"],
      matchDatasources: ["docker"],
      versioning: "regex:^(?:jdk)?(?<major>\\d+)$"
    },
    {
      description: ['Java Version Group'],
      groupName: 'Java Version',
      matchDepNames: ['gradle-toolchain', 'openjdk', 'gradle'],
      group: {
        commitMessageTopic: '{{{groupName}}} group'
      },
      minimumGroupSize: 3
    },
  ],
}
